<script>


    $(document).ready(function () {
        $('#elttable').DataTable(
            {
                fixedHeader: true,
                "lengthMenu": [[5,10, 25, 50, - 1], [5,10, 25, 50, "All record"]],
                //"ordering": false,
                "scrollY":        "400px",
        "scrollCollapse": true,
        "paging":         false,
                initComplete: function () {
                    this.api().columns(3).every(function () {
                        var column = this;
                        var select = $('#tag_name_elt')
                            .appendTo($('#tag_name_elt').empty())
                            .on('change', function () {
                                var val = $.fn.dataTable.util.escapeRegex(
                                    $(this).val()
                                );

                                column
                                    .search(val ? '^' + val + '$' : '', true, false)
                                    .draw();
                            });
                        select.append('<option value="">All</option>')
                        column.data().unique().sort().each(function (d, j) {
                            select.append('<option value="' + d + '">' + d + '</option>')
                        });
                    });
                    this.api().columns(4).every(function () {
                        var column = this;
                        var select = $('#type_elt')
                            .appendTo($('#type_elt').empty())
                            .on('change', function () {
                                var val = $.fn.dataTable.util.escapeRegex(
                                    $(this).val()
                                );

                                column
                                    .search(val ? '^' + val + '$' : '', true, false)
                                    .draw();
                            });
                        select.append('<option value="">All</option>')
                        column.data().unique().sort().each(function (d, j) {
                            select.append('<option value="' + d + '">' + d + '</option>')
                        });
                    });
                    this.api().columns(5).every(function () {
                        var column = this;
                        var select = $('#form_elt')
                            .appendTo($('#form_elt').empty())
                            .on('change', function () {
                                var val = $.fn.dataTable.util.escapeRegex(
                                    $(this).val()
                                );

                                column
                                    .search(val ? '^' + val + '$' : '', true, false)
                                    .draw();
                            });
                        select.append('<option value="">All</option>')
                        column.data().unique().sort().each(function (d, j) {
                            select.append('<option value="' + d + '">' + d + '</option>')
                        });
                    });
                },


            }

        );
    });
    function Delete_by_id() {
        ShowProgress();
        document.getElementById("elementform").submit();
    };
    
    $(function () {
        $("#checkall").click(function () {
            $("input[name='eltId_Delete']").prop("checked", this.checked);

            $("input[name='eltId_Delete']").click(function () {
