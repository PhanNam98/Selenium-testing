@page "/ManageAccount/ChangePassword"
@model ChangePasswordModel
@{
    ViewData["Title"] = "Change password";
    ViewData["ActivePage"] = ManageNavPages.ChangePassword;
     if (User.IsInRole("Adminitrator"))
    {
        Layout = "~/Views/Shared/_LayoutAdmin.cshtml";

    }
    else
    {
        Layout = "~/Views/Shared/_LayoutManage.cshtml";
    }
}

<h2>@ViewData["Title"]</h2>
<ol class="breadcrumb mb-4">
    <li class="breadcrumb-item" active><a asp-area="Identity" asp-page="/Account/Manage/Index">Change password</a></li>

</ol>
<hr />
<partial name="_StatusMessage" for="StatusMessage" />
<div class="row">
    <div class="col-md-2"></div>
    <div class="col-md-8">
        <div class="card mb-4">
            <div class="card-header">

                <div class="row">
                    <div class="col-6">
                        <i class="fas fa-id-card mr-1"></i>Change password
                    </div>
                    <div class="col-6">
                        <div class="container">
                            <div class="text-right">

                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <div class="card-body">
                <form id="change-password-form" method="post">
                    <div asp-validation-summary="All" class="text-danger"></div>
                    <div class="form-group">
                        <label asp-for="Input.OldPassword"></label>
                        <input asp-for="Input.OldPassword" class="form-control" />
                        <span asp-validation-for="Input.OldPassword" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Input.NewPassword"></label>
                        <input asp-for="Input.NewPassword" class="form-control" />
                        <span asp-validation-for="Input.NewPassword" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Input.ConfirmPassword"></label>
                        <input asp-for="Input.ConfirmPassword" class="form-control" />
                        <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
                    </div>
                    <hr />
                    <div class="container">
                        <div class="text-right">
                            <button type="submit" class="btn btn-primary">Update password</button>
                        </div>
                    </div>

                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
