@model IEnumerable<Generate_TestCase_Selenium_Web.Models.ModelDB.Running_process>

@{
    ViewData["Title"] = "Result";
    Layout = "~/Views/Shared/_LayoutManage.cshtml";
}

<h2>Result</h2>
<ol class="breadcrumb mb-4">
    <li class="breadcrumb-item active">Result</li>
</ol>
<div class="card mb-4">
    <div class="card-header">
        <div class="row">
            <div class="col-3"><i class="fas fa-table mr-1"></i>Results of the tests</div>
            <div class="col-9">
                <div class="container">
                    <div class="text-right">

                    </div>
                </div>
            </div>
        </div>

    </div>
    <div class="card-body">
        <div class="table-responsive">
            <table id="resulttable" class="table table-striped table-condensed table-hover table-bordered">
                <thead>
                    <tr>
                        @*<th>
                            @Html.DisplayNameFor(model => model.status)
                        </th>*@
                        <th>
                            @Html.DisplayName("id")
                        </th>
                        <th>
                            @Html.DisplayName("date")
                        </th>
                        @*<th>
                            @Html.DisplayNameFor(model => model.message)
                        </th>*@
                        @*<th>
                            @Html.DisplayNameFor(model => model.id_scheduleNavigation)
                        </th>*@
                        @*<th>
                            @Html.DisplayNameFor(model => model.id_userNavigation)
                        </th>*@
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            @*<td>
                                @Html.DisplayFor(modelItem => item.status)
                            </td>*@
                            <td>
                                @Html.DisplayFor(modelItem => item.id_process)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.end_time)
                            </td>
                            @*<td>
                                @Html.DisplayFor(modelItem => item.message)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.id_scheduleNavigation.id_schedule)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.id_userNavigation.Id)
                            </td>*@
                            <td>
                                @*<a asp-action="Edit" asp-route-id="@item.id_process">Edit</a> |*@
                                <a asp-action="ResultDetail" asp-route-id="@item.id_process" role="button" class="btn btn-primary">Details</a>
                                @*<a asp-action="Delete" asp-route-id="@item.id_process">Delete</a>*@
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
<script>

     $(document).ready(function () {
            $('#resulttable').DataTable(
                {
                    "lengthMenu": [[10, 25, 50, - 1], [10, 25, 50, "All record"]],
                    "ordering": false,
                }
            );
        });
</script>