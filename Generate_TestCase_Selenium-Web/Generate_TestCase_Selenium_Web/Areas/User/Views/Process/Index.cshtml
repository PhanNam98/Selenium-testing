@model IEnumerable<Generate_TestCase_Selenium_Web.Models.ModelDB.Running_process>

@{
    ViewData["Title"] = "Process";
    Layout = "~/Views/Shared/_LayoutManage.cshtml";
}

<h2>Process</h2>
<ol class="breadcrumb mb-4">
    <li class="breadcrumb-item active">Process</li>
</ol>
<div class="card mb-4">
    <div class="card-header">
        <div class="row">
            <div class="col-3"><i class="fas fa-table mr-1"></i>Process</div>
            <div class="col-9">
                <div class="container">
                    <div class="text-right">

                    </div>
                </div>
            </div>
        </div>

    </div>
    <div class="card-body">
        <div class="table-responsive">
            <table id="processtable" class="table table-striped table-condensed table-hover table-bordered">
                <thead>
                    <tr>
                        <th>
                            @Html.DisplayName("id")
                        </th>
                        <th>
                            @Html.DisplayName("Status")
                        </th>
                        <th>
                            @Html.DisplayName("Start time")
                        </th>
                        <th>
                            @Html.DisplayName("End time")
                        </th>
                        <th>
                            @Html.DisplayName("Schedule id")
                        </th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.id_process)
                            </td>
                            @if (item.status.Equals("waiting"))
                            {
                                <td style="color:blue">
                                    @Html.DisplayFor(modelItem => item.status)
                                </td>
                            }
                            else
                            if (item.status.Equals("running"))
                            {
                                <td style="color:green">
                                    @Html.DisplayFor(modelItem => item.status)
                                </td>
                            }
                            else
                               if (item.status.Equals("finished"))
                            {
                                <td>
                                    @Html.DisplayFor(modelItem => item.status)
                                </td>
                            }


                            <td>
                                @Html.DisplayFor(modelItem => item.start_time)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.end_time)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.id_scheduleNavigation.id_schedule)
                            </td>
                            <td>
                                <a asp-action="Details" asp-route-id_process="@item.id_process">Details</a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
<script>

     $(document).ready(function () {
            $('#processtable').DataTable(
                {
                    "lengthMenu": [[10, 25, 50, - 1], [10, 25, 50, "All record"]],
                    "ordering": false,


                }
            );
        });
</script>