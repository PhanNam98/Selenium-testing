@model Generate_TestCase_Selenium_Web.Models.ModelDB.Setting_

@{
    ViewData["Title"] = "Setting";
    Layout = "~/Views/Shared/_LayoutManage.cshtml";
}

<h2>Setting</h2>
<ol class="breadcrumb mb-4">

    <li class="breadcrumb-item active">Setting</li>
</ol>
<hr />
<partial name="~/Views/Shared/_StatusMessage.cshtml" model="@ViewBag.Message" />
<div class="row">
    <div class="col-md-3">
    </div>
    <div class="col-md-6">
        <div class="card mb-4">
            <div class="card-header">

                <div class="row">
                    <div class="col-4">
                        <i class="fas fa-cog"></i> Setting
                    </div>
                    <div class="col-8">
                        <div class="container">
                            <div class="text-right">

                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="card-body">

                <form asp-action="Setting">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <input type="hidden" asp-for="Id_User" />
                    <div class="form-group">
                        <label class="control-label">Broswer run test case: </label>
                        <select asp-for="Browser" asp-items="@ViewBag.Browsers">
                            <option disabled>Please select one</option>
                        </select>
                        @*<input asp-for="Browser" class="form-control" />*@
                        <span asp-validation-for="Browser" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        @Html.CheckBox("SendResultToMail")
                        <label  class="control-label"> Send result to email after running test cases</label>

                        @* <input asp-for="SendResultToMail" class="form-control" />*@

                        <span asp-validation-for="SendResultToMail" class="text-danger"></span>
                    </div>
                    <hr />
                    <div class="container">
                        <div class="text-right">
                            <input type="submit" value="Save" class="btn btn-primary" />
                        </div>

                    </div>
                </form>
            </div>
        </div>
    </div>
</div>


