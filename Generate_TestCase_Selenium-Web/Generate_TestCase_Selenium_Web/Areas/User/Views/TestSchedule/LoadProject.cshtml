@model IEnumerable<Generate_TestCase_Selenium_Web.Models.ModelDB.Project>

@{
    ViewData["Title"] = "Project";
    Layout = "~/Views/Shared/_LayoutManage.cshtml";
}

<h1>Choose Project</h1>

<ol class="breadcrumb mb-4">
    <li class="breadcrumb-item active">Project</li>
</ol>

<hr />


<partial name="~/Views/Shared/_StatusMessage.cshtml" model="@ViewBag.Message" />
<div class="card mb-4">
    <div class="card-header">

        <div class="row">
            <div class="col-2">
                <i class="fas fa-table mr-1"></i>Projects list
            </div>
            <div class="col-10">
                <div class="container">
                    <div class="text-right">
                      
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-striped table-condensed table-hover table-bordered" id="exam">
                <thead>
                    <tr>
                        <th style='width: 30%;'>
                            @Html.DisplayName("Project Name")
                        </th>
                        <th style='width: 45%;'>
                            @Html.DisplayName("Description")
                        </th>
                        <th style='width: 10%;'>
                            @Html.DisplayName("Created Date")
                        </th>
                        <th style='width: 10%;'>
                            @Html.DisplayName("Modified Date")
                        </th>

                        <th style='width: 5%;'>@Html.DisplayName("Url list")</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.name)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.description)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.CreatedDate.Date)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.ModifiedDate.Date)
                            </td>

                            <td>
                                <a asp-action="LoadUrl" asp-route-project_id="@item.id" role="button" class="btn btn-primary">Choose</a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
<script>

        
        $(document).ready(function () {
            $('#exam').DataTable(
                {
                    "lengthMenu": [[10, 25, 50, - 1], [10, 25, 50, "All record"]],
                    "ordering": false,


                }
            );
        });
</script>
